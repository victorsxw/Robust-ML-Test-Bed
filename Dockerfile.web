FROM node:16-slim

WORKDIR /app

# 复制package文件
COPY package*.json ./

# 安装依赖
RUN npm install

# 复制源代码
COPY . .

# 创建必要的目录
RUN mkdir -p \
    /app/Attack_Results \
    /app/Attack_Scripts \
    /app/Test_Dataset \
    /app/Train_Dataset \
    /app/User_Models

# 设置环境变量
ENV NODE_ENV=production
ENV IS_DOCKER=true

# 暴露端口
EXPOSE 3000

# 启动应用
CMD ["node", "server.js"]