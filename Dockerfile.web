FROM node:16

WORKDIR /app

# 复制 package.json 和 package-lock.json
COPY package*.json ./

# 安装依赖
RUN npm install

# 复制源代码
COPY . .

# 创建必要的目录
RUN mkdir -p /app/attack_results \
    /app/attack_scripts \
    /app/test_dataset \
    /app/train_dataset \
    /app/user_models

# 设置环境变量
ENV NODE_ENV=production
ENV IS_DOCKER=true

# 暴露端口
EXPOSE 3000

# 启动命令
CMD ["npm", "start"]